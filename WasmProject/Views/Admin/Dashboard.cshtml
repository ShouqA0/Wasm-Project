@model IEnumerable<WasmProject.Models.UserDb>
@{
    Layout = "_Layout";
    ViewData["Title"] = "لوحة التحكم - وسم";
}

@section Styles {
    <style>
        
        .dashboard-container {
            background-color: #0A192F;
            min-height: 100vh;
            padding: 40px 20px;
            direction: rtl;
        }

        
        .stat-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            transition: transform 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-10px);
                border-color: #ffffff;
            }

        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: #ffffff;
        }

        .glass-table-wrapper {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(212, 175, 55, 0.2); 
            border-radius: 25px;
            padding: 30px;
            margin-top: 30px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

        .custom-wasm-table {
            color: white !important;
            border-collapse: separate;
            border-spacing: 0 10px; 
            width: 100%;
        }

            .custom-wasm-table thead th {
                border: none;
                color: #D4AF37; 
                font-weight: 600;
                padding: 15px;
                text-align: center;
            }

            .custom-wasm-table tbody tr {
                background: rgba(255, 255, 255, 0.02);
                transition: 0.3s;
            }

                .custom-wasm-table tbody tr:hover {
                    background: rgba(255, 255, 255, 0.08);
                    transform: scale(1.005);
                }

            .custom-wasm-table td {
                padding: 15px;
                border: none;
                text-align: center;
            }

        
        .btn-wasm-delete {
            background: rgba(220, 53, 69, 0.1);
            color: #ff4d4d;
            border: 1px solid rgba(220, 53, 69, 0.3);
            padding: 6px 15px;
            border-radius: 10px;
            text-decoration: none;
            font-size: 0.9rem;
            transition: 0.3s;
            display: inline-block;
        }

            .btn-wasm-delete:hover {
                background: #dc3545;
                color: white;
                box-shadow: 0 0 15px rgba(220, 53, 69, 0.4);
            }
    </style>
}

<div class="dashboard-container">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="text-white fw-bold"><i class="fas fa-chart-pie ms-3"></i>لوحة الإدارة الرئيسية</h2>
            <a asp-action="Logout" class="btn btn-outline-light rounded-pill px-4">تسجيل الخروج</a>
        </div>

        
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="stat-card animate__animated animate__fadeInUp">
                    <i class="fas fa-users stat-icon"></i>
                    <h5 class="text-white-50">إجمالي المستخدمين</h5>
                    <h2 class="text-white">@ViewBag.TotalUsers</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card animate__animated animate__fadeInUp" style="animation-delay: 0.1s;">
                    <i class="fas fa-shield-alt stat-icon"></i>
                    <h5 class="text-white-50">الممتلكات الموثقة</h5>
                    <h2 class="text-white">@ViewBag.TotalProperties</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card animate__animated animate__fadeInUp" style="animation-delay: 0.2s;">
                    <i class="fas fa-search-location stat-icon text-danger"></i>
                    <h5 class="text-white-50">بلاغات المفقودات</h5>
                    <h2 class="text-danger">@ViewBag.LostReports</h2>
                </div>
            </div>
        </div>

       
        <div class="row mb-5">
            <div class="col-12">
                <div class="stat-card p-4 animate__animated animate__fadeIn">
                    <h4 class="text-white mb-4 text-end"><i class="fas fa-chart-line ms-2"></i> نشاط التوثيق (آخر 7 أيام)</h4>
                    <div style="height: 300px;">
                        <canvas id="wasmInteractionChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="glass-table-wrapper animate__animated animate__fadeInUp">
            <div class="d-flex align-items-center mb-4 px-3">
                <i class="fas fa-users-cog ms-2 text-warning fs-4"></i>
                <h4 class="text-white mb-0">إدارة حسابات المستخدمين</h4>
            </div>

            <div class="table-responsive">
                <table class="table custom-wasm-table">
                    <thead>
                        <tr>
                            <th>اسم المستخدم</th>
                            <th>الاسم الكامل</th>
                            <th>رقم الهوية</th>
                            <th>البريد الإلكتروني</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.FullName</td>
                                <td>@user.NationalID</td>
                                <td>@user.Email</td>
                                <td>
                                    <a asp-action="ConfirmDelete" asp-route-id="@user.UserID" class="btn-wasm-delete">
                                        <i class="fas fa-trash-alt ms-1"></i> حذف
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const labels = @Html.Raw(Json.Serialize(ViewBag.ChartLabels));
        const dataCounts = @Html.Raw(Json.Serialize(ViewBag.ChartData));

        const ctx = document.getElementById('wasmInteractionChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'عدد العمليات',
                    data: dataCounts,
                    borderColor: '#D4AF37',
                    backgroundColor: 'rgba(212, 175, 55, 0.1)',
                    fill: true,
                    tension: 0.4,
                    borderWidth: 3,
                    pointBackgroundColor: '#ffffff',
                    pointBorderColor: '#D4AF37',
                    pointRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: { color: '#ffffff', font: { family: 'Tajawal' } }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { color: 'rgba(255,255,255,0.6)' },
                        grid: { color: 'rgba(255,255,255,0.05)' }
                    },
                    x: {
                        ticks: { color: 'rgba(255,255,255,0.6)' },
                        grid: { display: false }
                    }
                }
            }
        });
    </script>
}