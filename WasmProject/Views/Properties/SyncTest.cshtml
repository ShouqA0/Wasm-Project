@model WasmProject.Models.Property

<style>
    
    .glass-scan-wrapper {
        background: rgba(255, 255, 255, 0.03) !important;
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 30px;
        color: white;
        overflow: hidden;
        transition: 0.3s ease;
    }

    
    .scan-header-glass {
        background: linear-gradient(135deg, rgba(0, 210, 255, 0.2), rgba(0, 123, 255, 0.2));
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 20px;
    }

   
    .glass-input-styled {
        background: rgba(255, 255, 255, 0.05) !important;
        border: 1px solid rgba(255, 255, 255, 0.15) !important;
        color: white !important;
        border-radius: 12px !important;
        padding: 12px !important;
    }

        .glass-input-styled:focus {
            border-color: #00d2ff !important;
            box-shadow: 0 0 15px rgba(0, 210, 255, 0.2) !important;
        }

    
    .serial-highlight-box {
        background: rgba(0, 210, 255, 0.05);
        border: 1px dashed rgba(0, 210, 255, 0.3);
        border-radius: 15px;
        padding: 20px;
    }

    
    .btn-wasm-confirm {
        background: linear-gradient(45deg, #00d2ff, #007bff);
        border: none;
        color: white;
        font-weight: bold;
        transition: 0.4s;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

        .btn-wasm-confirm:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 25px rgba(0, 210, 255, 0.3);
            color: white;
        }

    .text-cancel-wasm {
        color: rgba(255, 255, 255, 0.5);
        text-decoration: none;
        font-size: 0.9rem;
        transition: 0.3s;
    }

        .text-cancel-wasm:hover {
            color: #ff6b6b;
        }

    .label-blue {
        color: #00d2ff;
        font-size: 0.9rem;
    }
</style>

<div class="container mt-5 text-end mb-5 animate__animated animate__fadeIn" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="glass-scan-wrapper shadow-lg">

                
                <div class="scan-header-glass text-center">
                    <h4 class="mb-0 fw-bold">
                        <i class="fas fa-microchip ms-2 text-info"></i> نتائج الفحص الذكي (Smart Scan)
                    </h4>
                </div>

                <div class="card-body p-5">
                    
                    <div class="alert bg-success bg-opacity-10 border-success border-opacity-25 text-success text-center mb-5 rounded-4 animate__animated animate__pulse">
                        <i class="fas fa-check-circle ms-2"></i> تمت قراءة ملف الـ PDF بنجاح واستخراج بيانات الغرض.
                    </div>

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="SourceType" />

                        <div class="row g-4">
                            
                            <div class="col-md-6">
                                <label class="form-label fw-bold label-blue">الماركة المستخرجة</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-transparent border-0 text-white-50"><i class="fas fa-tag"></i></span>
                                    <input asp-for="Brand" class="form-control glass-input-styled" placeholder="الماركة" />
                                </div>
                            </div>

                            
                            <div class="col-md-6">
                                <label class="form-label fw-bold label-blue">الفئة</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-transparent border-0 text-white-50"><i class="fas fa-layer-group"></i></span>
                                    <input asp-for="Category" class="form-control glass-input-styled" readonly />
                                </div>
                            </div>

                            
                            <div class="col-md-12 mt-4">
                                <div class="serial-highlight-box">
                                    <label class="form-label fw-bold text-info d-block text-center mb-3">
                                        <i class="fas fa-fingerprint ms-1"></i> الرقم التسلسلي المستخرج (S/N)
                                    </label>
                                    <input asp-for="SerialNumber" class="form-control form-control-lg glass-input-styled text-center fw-bold fs-3"
                                           dir="ltr" style="letter-spacing: 3px; font-family: 'Courier New', monospace;" />
                                </div>
                            </div>

                            
                            <div class="col-md-12 mt-5 text-center">
                                <button type="submit" class="btn btn-wasm-confirm btn-lg px-5 rounded-pill mb-3 mb-md-0">
                                    تأكيد وتوثيق في وسم <i class="fas fa-shield-alt me-2"></i>
                                </button>
                                <div class="mt-3">
                                    <a asp-action="Create" class="text-cancel-wasm">
                                        <i class="fas fa-times-circle ms-1"></i> إلغاء وإعادة المحاولة
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>