@model IEnumerable<WasmProject.Models.Property>

@{
    ViewData["Title"] = "ممتلكاتي الموثقة - وسم";
    Layout = "_Layout";
}

<div class="main-container py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert" style="background: rgba(46, 204, 113, 0.2); color: #fff; backdrop-filter: blur(10px);">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom border-secondary">
        <div>
            <h2 class="fw-bold text-white mb-1"><i class="fas fa-boxes text-info"></i> ممتلكاتي الموثقة</h2>
            <p class="text-white-50 small mb-0">إدارة ممتلكاتك المسجلة عبر الأرقام التسلسلية بنظام وسم</p>
        </div>
        <a asp-action="Create" class="card-action-btn" style="padding: 12px 25px;">
            <i class="fas fa-plus-circle"></i> توثيق غرض جديد
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="glass-card text-center py-5">
            <i class="fas fa-folder-open fa-4x text-muted mb-4"></i>
            <h3 class="text-white">سجل الممتلكات فارغ</h3>
            <p class="text-white-50">لم تقم بتوثيق أي ممتلكات بعد. ابدأ الآن بتأمين ممتلكاتك الخاصة.</p>
            <a asp-action="Create" class="btn btn-nav-glass mt-3">ابدأ التوثيق الآن</a>
        </div>
    }
    else
    {
        <div class="cards-grid">
            @foreach (var item in Model)
            {
                <div class="glass-card position-relative">
                    <div class="position-absolute top-0 start-0 m-3">
                        @if (item.Status == "Lost")
                        {
                            <span class="badge bg-danger shadow-sm"><i class="fas fa-exclamation-triangle"></i> مفقود</span>
                        }
                        else
                        {
                            <span class="badge bg-success shadow-sm"><i class="fas fa-shield-alt"></i> آمن</span>
                        }
                    </div>

                    <div class="position-absolute top-0 end-0 m-3">
                        @if (item.IsVerified == true)
                        {
                            <i class="fas fa-check-circle text-info" title="تم التحقق من الملكية" style="font-size: 1.2rem;"></i>
                        }
                        else
                        {
                            <i class="fas fa-hourglass-half text-warning" title="قيد التدقيق"></i>
                        }
                    </div>

                    <div class="mt-4 text-center">
                        <span class="badge bg-info text-dark mb-2">@item.Category</span>
                        <h4 class="text-white fw-bold mb-3">@item.Brand</h4>

                        <div class="serial-box mb-4">
                            <small class="d-block text-white-50">الرقم التسلسلي</small>
                            <code class="text-info fw-bold" style="font-size: 1.1rem;">@item.SerialNumber</code>
                        </div>

                        <div class="d-flex justify-content-center gap-2 mt-4 pt-3 border-top border-secondary">
                            <a asp-action="Details" asp-route-id="@item.PropertyId"
                               class="btn btn-sm btn-nav-glass" title="عرض التفاصيل">
                                <i class="fas fa-eye"></i>
                            </a>

                            <a asp-controller="Chat" asp-action="Index" asp-route-propertyId="@item.PropertyId"
                               class="btn btn-sm btn-nav-glass position-relative" title="المحادثات">
                                <i class="fas fa-comments"></i>
                                @if (item.Status == "Lost")
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                                }
                            </a>

                            @if (item.Status == "Lost")
                            {
                                <button class="btn btn-sm btn-danger opacity-50" disabled>
                                    <i class="fas fa-bullhorn"></i>
                                </button>
                            }
                            else
                            {
                                <a asp-controller="LostReports" asp-action="Report" asp-route-propId="@item.PropertyId"
                                   class="btn btn-sm btn-outline-danger" title="إبلاغ عن فقدان">
                                    <i class="fas fa-bullhorn"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        
        console.log("تم تحميل لوحة ممتلكات وسم بنجاح.");
    </script>
}